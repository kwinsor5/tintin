#alias {{setup ranger} %1} {
	alias h hide;
	alias hw hide well;
	alias of order follower;
	alias ofa order follower assist %1;
}

#alias {{setup mystic} %1} {
	alias i cast 'insight';
	alias ii cast 'insight' %1;
	alias p cast 'poison';
	alias c cast 'curse';
	alias f cast 'fear';
	alias te cast 'terror';
	alias co cast 'confuse';
	alias dispel cast 'dispel regeneration' %1;
	alias dm cast 'detect magic';
	alias rm cast 'resist magic';
	alias ev cast 'evasion';
	alias dh cast 'detect hidden';
	alias death cast 'death ward';
	alias prag cast prag;
	alias gu cast 'guardian';
	alias slow cast 'slow digestion';
	alias r cast 'revive' %1;
	alias h cast 'hallucinate';
	alias sat cast 'curing saturation';
	alias rp cast 'remove poison';
}

#alias {{setup lhuth}} {
