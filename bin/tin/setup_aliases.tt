#nop Default local aliases for characters...

#class setup open
#alias {{setup default}} {
	set compact on;
	set spam off;
    set advancedview on;
}

#alias {{setup alias}} {
	alias std set tac def;
	alias stc set tac careful;
	alias stn set tac normal;
	alias sta set tac agg;
	alias stb set tac agg;
	alias dd detail damage;
	alias dg detail group;
	alias , dismount;
	alias . ride;
	alias lc l in corpse;
	alias 0 search;
	alias df drink waterskin;
}


#alias {{setup mage}} {
	alias 1 cast 'cure self';
	alias 2 cast 'vitalize self';
	alias c cast 'chill ray';
	alias p cast 'lightning bolt';
	alias o cast 'magic missile';
	alias z cast 'reveal life';
	alias v cast 'flash';
	alias re cast 'relocate';
	alias bl cast 'blink';
	alias fi cast 'firebolt';
	alias fb cast 'fireball';
	alias ls cast 'lightning strike';
	alias cc cast 'cone of cold';
	alias id cast 'identify';
	alias create cast 'create light';
	alias ll cast 'locate living';
	alias sh cast 'shield';
	alias pc prepare 'chill ray';
	alias pl prepare 'lighting bolt';
	alias pf prepare 'firebolt';
	alias pfb prepare 'fireball';
	alias pls prepare 'lightning strike';
	alias pcc prepare 'cone of cold';
}

#alias {{setup hai mage}} {
	alias 1 cast 'cure self';
	alias 2 cast 'vitalize self';
	alias c cast 'chill ray';
	alias p cast 'dark bolt';
